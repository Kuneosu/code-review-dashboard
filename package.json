{
  "name": "smart-code-review",
  "displayName": "Smart Code Review",
  "description": "AI-powered code analysis tool for security, performance, and quality",
  "version": "0.1.0",
  "publisher": "smart-code-review",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-code-review.openDashboard",
        "title": "Smart Code Review: Open Dashboard"
      },
      {
        "command": "smart-code-review.analyzeCurrentProject",
        "title": "Smart Code Review: Analyze Current Project"
      },
      {
        "command": "smart-code-review.setup",
        "title": "Smart Code Review: Setup Wizard"
      },
      {
        "command": "smart-code-review.resetSetup",
        "title": "Smart Code Review: Reset Setup (Dev Only)"
      }
    ],
    "configuration": {
      "title": "Smart Code Review",
      "properties": {
        "smartCodeReview.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter (python3 or python)"
        },
        "smartCodeReview.serverPort": {
          "type": "number",
          "default": 8000,
          "description": "Port for Python backend server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "build:webview": "cd webview && npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^8.57.1",
    "typescript": "^5.9.3"
  }
}
